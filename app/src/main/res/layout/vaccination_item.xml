<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:layout_margin="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#7C85FA"
        app:cardCornerRadius="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vaccinLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Le vaccin: "
            android:textSize="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/vaccin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le vaccin"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/moughataaVaccinationLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Moughataa: "
            android:textSize="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/moughataaVaccination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moughataa"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateVaccinationLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Date de vaccination: "
            android:textSize="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/dateVaccination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date du vaccination"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="#fff"
            />
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>